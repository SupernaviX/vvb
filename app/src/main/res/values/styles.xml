<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/vb_dim</item>
        <item name="colorPrimaryDark">@color/vb_dim</item>
        <item name="colorAccent">@color/vb_bright</item>
        <item name="android:windowBackground">@color/vb_black</item>
        <item name="android:colorBackground">@color/vb_black</item>
        <item name="android:textColorPrimary">@color/vb_bright</item>
        <item name="android:textColorSecondary">@color/vb_dim</item>
    </style>
    <style name="GameTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>