<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/vb_dim</item>
        <item name="colorPrimaryDark">@color/vb_dim</item>
        <item name="colorAccent">@color/vb_bright</item>
        <item name="android:windowBackground">@color/vb_black</item>
        <item name="android:colorBackground">@color/vb_black</item>
        <item name="android:textColorPrimary">@color/vb_red</item>
        <item name="android:textColorSecondary">@color/vb_dim</item>
        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/vb_very_dim</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:textColorLink">@color/vb_red</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/vb_very_dim</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:textColorLink">@color/vb_red</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <item name="colorPrimary">@color/vb_dim</item>
        <item name="colorPrimaryDark">@color/vb_dim</item>
        <item name="colorAccent">@color/vb_bright</item>
    </style>

    <style name="GameTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>